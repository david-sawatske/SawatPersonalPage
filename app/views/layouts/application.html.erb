<!DOCTYPE html>
<html>
  <head>
    <title>David Sawatske</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://fonts.googleapis.com/css?family=Raleway|Playfair+Display" rel="stylesheet">

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-119437845-2', 'auto');
      ga('send', 'pageview');
    </script>
  </head>

  <body>
    <div class="info-head">
      <h2 class="name"><%= link_to "David Sawatske", root_path %></h2>

      <div class='links'>
        <%= render "pages/contact" %>
      </div>
    </div>

    <div class="alert">
      <p><%= notice %></p>
      <p><%= alert %></p>
    </div>

    <div class="session">
      <% if current_user %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to "Admin Sign In", new_user_session_path %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
