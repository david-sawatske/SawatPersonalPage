<div class='project'>
  <% if logged_in?(:site_admin) %>
    <h3><%= link_to project.title, project_path(project) %></h3>
  <% else %>
  <h3><%= project.title %></h3>
  <% end %>
  <%= link_to "Edit", edit_project_path(project), class: "edit-link" %>
  <%= link_to "Delete", project, method: :delete, data: { confirm: 'Are you sure?' }, class: "delete-link" %>
  <p class="project-description"><%= project.description %></p>

  <% if project.image? %>
    <%= image_tag project.image, class: "project-image" %>
  <% else %>
    <%= image_tag src="http://via.placeholder.com/200x150", class: "project-image" %>
  <% end %>

  <ul class="project-links">
    <% if project.live_url %>
      <li> <%= link_to_if project.live_url, image_tag("web-link.png"), project.live_url %> </li>
    <% end %>

    <% if project.git_url %>
      <li> <%= link_to image_tag("github.png"), project.git_url %> </li>
    <% end %>
  </ul>

  <div class="project-technologies">
    <h4>Technologies: </h4>
    <ul>
      <% project.technologies.each do |tech| %>
        <li><%= image_tag tech.icon, class: "tech-icon" %></li>
      <% end %>
    </ul>
  </div>
</div>
