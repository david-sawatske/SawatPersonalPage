<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <ul>
      <% blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: 15 %>
  </div>

  <div>
    <%= f.label :project_id %>
    <%= f.number_field :project_id %>
  </div>

  <div>
    <%= f.submit "Submit" %>
  </div>
<% end %>

<%= link_to "All Blogs", blogs_path %>
